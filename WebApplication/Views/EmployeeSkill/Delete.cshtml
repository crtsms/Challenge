@model WebApplication.ViewModels.EmployeeSkillVM
@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}


<div class="container-fluid">
    <h4>Employee Skill</h4>
    <hr />

    <h5>Are you sure you want to delete this?</h5>

    <dl class="dl-horizontal">
        <dt>
            Skill
        </dt>

        <dd>
            @Html.DisplayNameFor(model => model.Skills.FirstOrDefault().Name)
        </dd>

        <dt>
            Ages
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearsExperience)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group col-md-12">
            <input type="submit" value="Delete" class="btn btn-success btn-danger" />
        </div>
      
    }
</div>
